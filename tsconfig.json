{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@/controllers/*": ["src/controllers/*"],
      "@/models/*": ["src/modals/*"],
      "@/routes/*": ["src/routes/*"],
      "@/validationSchema/*": ["src/validationSchema/*"],
      "@/middlewares/*": ["src/middlewares/*"],
      "@/services/*": ["src/services/*"],
      "@/types/*": ["src/types/*"],
      "@/database/*": ["src/database/*"]
    }
  }
}
