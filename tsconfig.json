{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": ".",
    "strictNullChecks": true,
    "paths": {
      "@/controller/*": ["src/controller/*"],
      "@/models/*": ["src/models/*"],
      "@/routes/*": ["src/routes/*"],
      "@/validationSchema/*": ["src/validationSchema/*"],
      "@/middlewares/*": ["src/middlewares/*"],
      "@/services/*": ["src/services/*"],
      "@/types/*": ["src/types/*"],
      "@/database/*": ["src/database/*"],
      "@/errors/*": ["src/errors/*"],
      "@/utils/*": ["src/utils/*"]
    }
  }
}
